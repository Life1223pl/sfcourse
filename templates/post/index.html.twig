{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of all Posts</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>

                <td>{{ post.id }}</td>
                <td><a href="{{ path('show', {id: post.id}) }}">{{ post.title }}</a></td>
                <td><a href="{{ path('remove', {id: post.id}) }}" type="button" class="btn btn-danger">Remove</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

